{% extends 'base1.html.twig' %}

{% block body %}
<body>

    <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
			<div class="row">
				{{ form_start(form, {'attr': {'class': 'form-row align-items-end'}}) }}
				<div class="form-row align-items-end">
					<div class="col">
						{{ form_row(form.name, {'attr': {'class': 'form-control bg-dark border-0', 'placeholder': 'Search'}}) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
                    <center><a class="btn btn-primary rounded-pill " href="{{ path('app_registration2') }}">Ajouter utilisateur</a></center>
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Basic Table</h6>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                       <th>Nom</th> 
                                       <th>Prénom</th>
                                       <th>Cin</th>
                                       <th>Email</th>
                                       <th>Rôle</th>
                                       <th>Password</th>
                                       <th>Afficher</th>
                                       <th>Modifier</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nomUser }} </td>
                <td>{{ user.prenomUser }}</td>
                <td>{{ user.cinUser }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles[0] }}</td>
                <td>******************</td>
                <td><a class="btn btn-success rounded-pill" href={{ path('app_user_show', {'id': user.id}) }}>Afficher</a></td>
                <td><a class="btn btn-danger rounded-pill" href={{ path('app_user_edit', {'id': user.id}) }}>Modifier</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No records found</td>
            </tr>
        {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    
                    

  </body><!-- End #main -->


{% endblock %}