{% extends 'base1.html.twig' %}

{% block body %}
  <div class="container-fluid pt-4 px-4">
   <div class="row g-4">
      <div class="col-sm-12 col-xl-6">
          <div class="bg-secondary rounded h-100 p-4">
          
                    <h6 class="mb-4">Create an Account</h6>
                    <p class="text-center small">Enter these details to create account</p>
          
            {{form_start(form,{'attr':{'novalidate': 'novalidate'}} )}}
            <table>
            <tr>
            <td><label for="inputText" class="form-label">Nom</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.nom_user,{'attr':{'class':'form-control'}}) }}</td>
                        </div>
                        <td>{{ form_errors(form.nom_user,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>
            <tr>
            <td><label for="inputText" class="form-label">Prénom</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.prenom_user,{'attr':{'class':'form-control'}}) }}</td>
                        </div>
                        <td>{{ form_errors(form.prenom_user,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>
            <tr>
            <td><label for="inputText" class="form-label">CIN</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.cin_user,{'attr':{'class':'form-control'}}) }}<td>
                        </div>
                        <td>{{ form_errors(form.cin_user,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>
            <tr>
            <td><label for="inputText" class="form-label">Email</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}</td>
                        </div>
                        <td>{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>
            <tr>
            <td><label for="inputText" class="form-label">Rôle</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.roles,{'attr':{'class':'form-control'}}) }}</td>
                        </div>
                        <td>{{ form_errors(form.roles,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>
            <tr> 
            <td><label for="inputText" class="form-label">Password</label></td>
                        <div class="col-sm-10">
                            <td>{{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}</td>
                        </div>
                        <td>{{ form_errors(form.password,{'attr':{'class':'text-danger'}}) }}</td>
            </tr>  
            </table>
            <br>
            <br> 
             <center><button class="btn btn-success">{{ button_label|default('Save') }}</button></center>
            {{ form_end(form) }}   
        </div>
      </div>
    </div>
  </div>
{% endblock %}
