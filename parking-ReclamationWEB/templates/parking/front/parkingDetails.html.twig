{% extends 'front.html.twig' %}
{% block content %}
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-0">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeIn;">
                    <div class="h-100">
                        <img class="img-fluid h-100" src="/frontend/img/parking-banner.webp" alt="">
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeIn;">
                    {% if parking %}
                        <div class="bg-secondary h-100 d-flex flex-column justify-content-center p-5">
                            <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Parking</p>
                            <h1 class="text-uppercase mb-4">{{ parking.nomParking }}</h1>
                            <div>
                                <div class="d-flex justify-content-between border-bottom py-2">
                                    <h6 class="text-uppercase mb-0">Capacite</h6>
                                    <span class="text-uppercase">{{ parking.capaciteParking }}Place(s)</span>
                                </div>
                                <div class="d-flex justify-content-between border-bottom py-2">
                                    <h6 class="text-uppercase mb-0">Taken</h6>
                                    <span class="text-uppercase">{{ parking.takenpParking }}Place(s)</span>
                                </div>
                                <div class="d-flex justify-content-between border-bottom py-2">
                                    <h6 class="text-uppercase mb-0">Prix</h6>
                                    <span class="text-uppercase">{{ parking.prixParking }} TND/h</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}