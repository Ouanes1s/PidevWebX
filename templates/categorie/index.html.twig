{% block changeMe %}
	<div class="container-fluid pt-4 px-4">
		<div class="bg-secondary rounded-top p-4">
			<div class="row">
				{{ form_start(form, {'attr': {'class': 'form-row align-items-end'}}) }}
				<div class="form-row align-items-end">
					<div class="col">
						{{ form_row(form.nom, {'attr': {'class': 'form-control bg-dark border-0', 'placeholder': 'Search'}}) }}
					</div>
				</div>
				{{ form_end(form) }}
			</div>
			{% if categories %}
				<div class="col-12">
					<div class="bg-secondary rounded h-100 p-4">
						<div class="d-flex align-items-center justify-content-between mb-4">
							<h6 class="mb-4">Liste des categories</h6>
							<a href="/categorie/liste">Show All</a>
						</div>
						<div class="table-responsive">
							<table class="table">
								<thead>
									<tr>
										<th style="width:35%">Catégories</th>
										<th style="width:29%">Nombre des Produits</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% set sorted_categories = categories|sort((a, b) => b.produits|length <=> a.produits|length) %}

									{% for categorie in sorted_categories %}
										<tr>
											<td>{{ categorie.nom | upper }}</td>
											<td>
												{{ categorie.produits|length }}
											</td>
											<td>
												<a href="/categorie/details/{{ categorie.id }}" class="btn btn-dark" data-toggle="modal" data-target="#produit-details-{{ categorie.id }}">Détails</a>
												<a href="/categorie/modif/{{ categorie.id }}" class="btn btn-dark">Modifier</a>
												<a href="/categorie/supp/{{ categorie.id }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de supprimer cette Catégorie?');">Supprimer</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					{% else %}
						<p>Aucune Catégorie</p>
						<a href="/categorie/liste">Show All</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
